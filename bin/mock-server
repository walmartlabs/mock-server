#!/usr/bin/env node

var args = process.argv.slice(2);

if (args.length !== 4 && args.length !== 2) {
  console.error('Usage: mock-server appDir proxyServer [port securePort]');
  process.exit(1);
  return;
}

var config = require('../lib/config');
config.isHeroku = args[0] === 'heroku';
config.appDir = config.isHeroku ? '/tmp/mock-server' : args[0];
config.proxyServer = args[1];
config.port = args[2] || process.env.PORT || 8080;
config.securePort = args[3] || 8081;

// Start up
require('../lib');
